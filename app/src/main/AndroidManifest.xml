<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rubiksmarttrainer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FourPage"
            android:label="@string/four"
            android:parentActivityName=".HowToSolvePage"/>
        <activity android:name=".ThreePage"
            android:label="@string/three"
            android:parentActivityName=".HowToSolvePage"/>
        <activity android:name=".TwoPage"
            android:label="@string/two"
            android:parentActivityName=".HowToSolvePage"/>
        <activity android:name=".TimerPage"
            android:label="@string/timer"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".TutorialPage"
            android:label="@string/tutorial"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".HowToSolvePage"
            android:label="@string/howtosolve"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".ExplanationPage"
            android:label="@string/explanation"
            android:parentActivityName=".HomeActivity"/>
        <activity android:name=".HomeActivity" />

    </application>

</manifest>